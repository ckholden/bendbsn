<!DOCTYPE html>
<html lang="en">
<head>
    {% include "head.njk" %}
</head>
<body>
    {% if requireAuth %}
    {% include "auth-guard.njk" %}
    {% endif %}

    <header class="site-header">
        <a href="/home/" class="logo-link"><img src="/logo.png" alt="BendBSN" class="site-logo"></a>
        {% if headerActions %}
        <div class="header-actions">
            {% for action in headerActions %}
            <button class="header-btn" onclick="{{ action.onclick }}" title="{{ action.title }}">
                {{ action.icon | safe }}
                <span>{{ action.label }}</span>
            </button>
            {% endfor %}
        </div>
        {% endif %}
    </header>

    <!-- Toast Container -->
    <div class="toast-container" id="toastContainer"></div>

    {{ content | safe }}

    {% if includeBottomToolbar %}
    {% include "bottom-toolbar.njk" %}
    {% endif %}

    {% include "firebase.njk" %}

    {% if pageScript %}
    <script nonce="{{ nonce }}">
        {{ pageScript | safe }}
    </script>
    {% endif %}

    <script src="/shared/header.js"></script>
</body>
</html>
